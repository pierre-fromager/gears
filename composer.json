{
    "name": "pier-infor/gears",
    "description": "Pier-Infor Gears",
    "type": "project",
    "license": "GNU GPL 3",
    "autoload": {
        "psr-4": {
            "PierInfor\\Gears\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true,
        "process-timeout": 0
    },
    "authors": [
        {
            "name": "Pierre Fromager",
            "email": "info@pier-infor.fr"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "monolog/monolog": "^1.25"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phploc/phploc": "^5.0",
        "phpmd/phpmd": "@stable",
        "theseer/phpdox": "@stable",
        "pier-infor/undercover": "^1.0.1",
        "phpstan/phpstan": "^1.6"
    },
    "scripts": {
        "up": [
            "composer update --with-all-dependencies"
        ],
        "start": [
            "php src/index.php"
        ],
        "lint": [
            "php ./vendor/bin/phpcbf --standard=PSR12 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "test": [
            "phpdbg -qrr ./vendor/bin/phpunit",
            "php ./vendor/bin/undercover -f build/logs/coverage.clover -l95 -m95 -s95 -c95 -b true"
        ],
        "cq": [
            "php ./vendor/bin/phploc --ansi src/* --log-xml ./build/logs/phploc.xml"
        ],
        "doc": [
            "composer cq",
            "php ./vendor/bin/phpdox"
        ],
        "phpstan": [
            "php ./vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "genautoload":[
            "composer dump-autoload -o"
        ]
    }
}
